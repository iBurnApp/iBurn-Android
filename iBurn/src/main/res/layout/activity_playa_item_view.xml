<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        class="com.gaiagps.iburn.fragment.GoogleMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true" />

    <at.markushi.ui.CircleButton
        android:id="@+id/favorite_button"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_heart"
        app:cb_color="@color/white"
        app:cb_pressed_ring_width="8dip" />


    <TextView
        android:id="@+id/title"
        style="@style/PlayaTextItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/favorite_button"
        android:layout_below="@id/map"
        android:ellipsize="marquee"
        android:textSize="26sp"
        android:padding="8dp"
        android:textStyle="bold" />


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/title"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subitem_1"
                style="@style/PlayaTextItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textSize="26sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/subitem_2"
                style="@style/PlayaTextItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textSize="20sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/subitem_3"
                style="@style/PlayaTextItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textSize="20sp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/body"
                style="@style/PlayaTextItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="false"
                android:textSize="18sp"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>