<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed overrides everything -->
    <item android:state_pressed="true" android:color="@color/regular_text"/>

    <!-- selected (but not pressed) -->
    <item android:state_selected="true" android:color="@color/tab_bg"/>

    <!-- default -->
    <item android:color="@color/regular_text"/>
</selector>