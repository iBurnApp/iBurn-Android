<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Iburn.Base" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="Theme.Iburn" parent="Theme.Iburn.Base">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Iburn</item>
    </style>

    <style name="ActionBar.Transparent.Iburn" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/ab_bg</item>
    </style>

    <style name="PlayaTextItem">
        <item name="android:textColor">@color/regular_text</item>
        <item name="android:shadowColor">#ff393939</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">.1</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="PlayaListViewHeaderItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sub_pager_tab_bg</item>
    </style>

    <style name="Subdued">
        <item name="android:textColor">@color/sub_sub_text</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
