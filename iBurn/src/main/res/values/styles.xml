<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Iburn.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/iburn_color</item>
        <item name="colorPrimaryDark">@color/iburn_color_dark</item>
    </style>

    <!-- Application theme. -->
    <style name="Theme.Iburn" parent="Theme.Iburn.Base">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Iburn</item>

        <item name="android:editTextBackground">@drawable/iburn_edit_text_holo_dark</item>

        <item name="android:textColorHighlight">#99ff8d1c</item>
        <item name="android:textSelectHandleLeft">@drawable/iburn_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/iburn_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/iburn_text_select_handle_middle</item>

        <item name="android:listChoiceIndicatorMultiple">@drawable/iburn_btn_check_holo_dark</item>

        <item name="android:listChoiceIndicatorSingle">@drawable/iburn_btn_radio_holo_dark</item>

        <item name="android:fastScrollThumbDrawable">@drawable/iburn_fastscroll_thumb_holo</item>
    </style>

    <style name="ActionBar.Transparent.Iburn" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/ab_bg</item>
    </style>

    <style name="PlayaTextItem">
        <item name="android:textColor">@color/regular_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="PlayaListViewHeaderItem">
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sub_pager_tab_bg</item>
    </style>

    <style name="Subdued">
        <item name="android:textColor">@color/sub_sub_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GreenText">
        <item name="android:textColor">@color/green_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OrangeText">
        <item name="android:textColor">@color/orange_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    // GJ

    <style name="Theme.GJ" parent="Theme.Iburn">
        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    // Spinner styles

    <style name="spinnerItemStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:background">#ff666666</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:background">#ff666666</item>
    </style>

    // Settings text

    <color name="dark_text">#FF444444</color>
    <color name="light_back">#FFDDDDDD</color>

    <style name="GjBack">
        <item name="android:background">@color/light_back</item>
    </style>

    <dimen name="GjMarginSide">10dip</dimen>

    <style name="GjItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/GjMarginSide</item>
        <item name="android:layout_marginLeft">@dimen/GjMarginSide</item>
    </style>

    <style name="GjText" parent="GjItem">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="GjText.title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
