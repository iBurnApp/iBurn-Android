<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Iburn.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/iburn_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/iburn_color</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/iburn_color</item>
        <item name="colorSecondaryContainer">@color/iburn_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/iburn_color</item>
        <item name="colorTertiaryContainer">@color/iburn_color</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/iburn_color</item>
        <item name="colorOnSurface">@color/iburn_color</item>
        <item name="colorOnPrimarySurface">@color/iburn_color</item>
        <item name="colorOnSurfaceInverse">@color/iburn_color</item>
        <item name="android:windowBackground">@color/window_background</item>

    </style>

    <style name="Theme.Iburn.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/iburn_color</item>
        <item name="colorSecondary">@color/iburn_color</item>
        <item name="colorTertiary">@color/iburn_color</item>
        <item name="colorOnSurfaceVariant">@color/iburn_color</item>
    </style>

    <!-- MainActivity theme -->
    <style name="Theme.Iburn" parent="Theme.Iburn.Base">
    </style>

    <style name="ActionBar.Transparent.Iburn" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/ab_bg</item>
    </style>

    <style name="PlayaTextItem">
        <item name="android:textColor">@color/regular_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="PlayaListViewHeaderItem">
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sub_pager_tab_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayaListViewSubHeaderItem">
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sub_header_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Subdued">
        <item name="android:textColor">@color/sub_sub_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GreenText">
        <item name="android:textColor">@color/green_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OrangeText">
        <item name="android:textColor">@color/orange_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Pre Lollipop the FAB provides its own padding -->
    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Welcome -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WelcomeHeadingAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/welcome_heading</item>
        <item name="android:textColor">@color/regular_text</item>
    </style>

    <style name="WelcomeContentAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/welcome_content</item>
        <item name="android:textColor">@color/regular_text</item>
    </style>

    <style name="BottomNavShapeAppearanceOverlay">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="BottomNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
    <!-- Background drawable -->
        <item name="android:color">@color/regular_text</item>
        <item name="shapeAppearance">@style/BottomNavShapeAppearanceOverlay</item>
    </style>


</resources>
